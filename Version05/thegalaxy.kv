#:import menu menu

MainWidget:

<MainWidget>:
    canvas.before:
        Rectangle:
            size: self.size
            source: "images/bg1.png"
    menu_widget: menu_widget
    perspective_point_x: self.width / 2
    perspective_point_y: self.height * 0.75
    MenuWidget:
        id: menu_widget
    Label:
        text: root.score_txt
        font_size: dp(20)
        font_name: "fonts/Eurostile.ttf"
        size_hint: .2, .18
        pos_hint: { "X": 0, "top": 1}
    Label:
        text: root.highscore_txt
        font_size: dp(20)
        font_name: "fonts/Eurostile.ttf"
        size_hint: .2, .18
        pos_hint: { "X": 1, "top": 1, "right": .5}
    Label:
        text: root.level_txt
        font_size: dp(20)
        font_name: "fonts/Eurostile.ttf"
        size_hint: .2, .18
        pos_hint: { "X": 0, "top": 1, "right": 1}
